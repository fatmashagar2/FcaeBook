<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="16dp">

    <!-- Logo at the top -->

    <!-- Space between logo and email field -->
    <ImageView
        android:id="@+id/user_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:src="@drawable/logo" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="150dp" />

    <!-- Email field -->
    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
          android:hint="Email"
        android:inputType="textEmailAddress"
        android:minHeight="48dp"
        android:padding="10dp"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/darker_gray" />

    <!-- Space between email and password field -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="16dp" />

    <!-- Password field with eye icon -->

        <EditText
            android:id="@+id/pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textEmailAddress"
            android:minHeight="48dp"
            android:padding="10dp"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/darker_gray" />



    <!-- Space between password and Remember Me checkbox -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="16dp" />

    <!-- Remember Me checkbox -->
    <CheckBox
        android:id="@+id/remember_me1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remember me"
        android:textColor="@android:color/white" />

    <!-- Space between Remember Me and Login button -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="32dp" />

    <!-- Login button as a container with rounded corners -->
    <FrameLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
          android:padding="12dp"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/login_button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOGIN"
            android:textColor="@color/design_default_color_on_secondary"
            android:textAllCaps="false"
            android:layout_gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:padding="8dp" />
    </FrameLayout>

    <!-- Space between Login button and Register link -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="16dp" />

    <!-- Register link -->
    <TextView
        android:id="@+id/register_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Don't have an account? Register"

        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp" />

</LinearLayout>
